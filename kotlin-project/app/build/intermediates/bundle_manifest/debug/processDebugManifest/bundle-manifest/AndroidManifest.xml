<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eps.creditoffer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.eps.creditoffer.MainActivity" />
        <activity android:name="com.eps.creditoffer.CashIn" />
        <activity android:name="com.eps.creditoffer.CashOut" />
        <activity android:name="com.eps.creditoffer.TrackLimit" />
        <activity android:name="com.eps.creditoffer.Eligibility" />
        <activity android:name="com.eps.creditoffer.Installment" />
        <activity android:name="com.eps.creditoffer.OverdraftConfirmation" />
        <activity android:name="com.eps.creditoffer.StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>